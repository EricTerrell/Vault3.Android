<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <TextView
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
			android:textColor="?android:attr/textColorPrimary"
        	android:text="Note: Changing the password can take multiple minutes."
		>
		</TextView>        
        <CheckBox
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:id="@+id/RequirePassword"
        ></CheckBox>
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        >
	        <TextView
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="New Password:"
	        >
	        </TextView>
	       	<EditText
	       		android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"
	        	android:singleLine="true"
	       		android:id="@+id/NewPassword"
	       	>
	       	</EditText>
        </LinearLayout>
        <LinearLayout
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        >
	        <TextView
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="New Password (Again):"
	        >
	        </TextView>
	       	<EditText
	       		android:layout_width="fill_parent"
	       		android:layout_height="wrap_content"
	        	android:singleLine="true"
	       		android:id="@+id/NewPasswordAgain"
	       	>
	       	</EditText>
        </LinearLayout>
		<CheckBox
	  		android:layout_width="fill_parent"
	  		android:layout_height="wrap_content"
	  		android:text="Force password to be uppercase"
	  		android:id="@+id/ForceUppercasePassword"
		></CheckBox>
		<CheckBox
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="Show password"
			android:id="@+id/ShowPassword"
			></CheckBox>
		<TextView
	  		android:id="@+id/ErrorMessage"
		  	style="@style/ErrorMessage"
            android:visibility="gone"
	  	>
	  	</TextView>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:paddingTop="8dip"
		android:paddingLeft="3dip"
		android:paddingRight="3dip"
		android:paddingBottom="0dip"
	>
		<Button
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="Cancel"
			android:id="@+id/CancelButton"
		></Button>
	    		<Button
			android:layout_width="0px"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="OK"
			android:enabled="false"
			android:id="@+id/OKButton"
		></Button>
	</LinearLayout>
</LinearLayout>